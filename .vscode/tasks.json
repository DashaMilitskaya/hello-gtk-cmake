{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "cmake: configure",
      "type": "shell",
      "command": "cmake -B build -G Ninja",
      "group": "build",
      "problemMatcher": ["$gcc"],
      "presentation": {
        "reveal": "always"
      }
    },
    {
      "label": "cmake: build",
      "type": "shell",
      "command": "cmake --build build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"]
    },
    {
      "label": "cmake: clean",
      "type": "shell",
      "command": "rm -rf build",
      "problemMatcher": []
    },
    {
      "label": "cmake: reconfigure",
      "type": "shell",
      "command": "cmake -B build -G Ninja --fresh",
      "problemMatcher": []
    },
    {
      "label": "pkg-config: gtk4 info",
      "type": "shell",
      "command": "pkg-config --modversion gtk4 && pkg-config --cflags --libs gtk4",
      "problemMatcher": []
    }
  ]
}